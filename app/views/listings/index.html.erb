<div class="row">
  <%= form_tag search_listings_path, class: "row collapse", :method => :get do  %>
      <div class="large-8 small-9 columns">
        <%= text_field_tag :query, params[:query] %>
      </div>
      <div class="large-4 small-3 columns">
        <%= submit_tag "Search" , class: 'button' %>
      </div>
  <% end %>
</div>

<div class="row">
  <div class="page-header">
    <h1>Latest properties</h1>
  </div>
</div>


<table class="table table-striped">
  <thead>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Price</th>
    <th>Suburb</th>
  </tr>
  </thead>
  <tbody>
  <% @listings.each do |p| %>
      <tr>
        <td>
          <%= p.title %>
        </td>
        <td>
          <%= p.description %>
        </td>
        <td>
          <%= p.price %>
        </td>
        <td>
          <%= p.suburbID %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>