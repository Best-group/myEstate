<div class="page-header">
  <h1>Search Results</h1>
</div>
<div class="row">
  <div class="large-12 columns">
    <%= form_tag search_listings_path, :method => :get do %>
        <div class="row clearfix">
          <%= text_field_tag :query, params[:query], class: "large-8 column float-left" %> <%= submit_tag "Search", class: "button float-left" %>
        </div>


    <% end %>
  </div>

</div>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Price</th>
    <th>City</th>
  </tr>
  </thead>
  <tbody>
  <% @listings.each do |p| %>
      <tr>
        <td>
          <%= p.title %>
        </td>
        <td>
          <%= p.description %>
        </td>
        <td>
          <%= p.price %>
        </td>
        <td>
          <%= p.suburbID %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>